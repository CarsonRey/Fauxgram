<div class="centering_container">
  <div class="form_container">
    <%= form_for @user do |f| %>
    <div>
      <%= f.label :name, class: "label"  %>
      <%= f.text_field :name, class: "picture_edit_form_input" %>
    </div>
    <div>
      <%= f.label "Profile Picture", class: "label"   %>
      <%= f.file_field :img_url, class: "picture_edit_form_input" %>
    </div>
    <div>
      <%= f.label :bio, class: "label"  %>
      <%= f.text_area :bio, class: "picture_edit_form_input" %>
    </div>
    <div>
      <%= f.label :email, class: "label"   %>
      <%= f.email_field :email, class: "picture_edit_form_input" %>
    </div>
    <div>
      <%= f.label :number, class: "label"   %>
      <%= f.telephone_field :number, place_holder: 'xxx-xxx-xxxx', class: "picture_edit_form_input" %>
    </div>
    <div>
      <%= f.label :gender, class: "label"   %>
      <%= f.select :gender, ["Male", "Female", "Non Binary"] %>
    </div>

    <div class="button-container">
      <%= f.submit class: "edit_form_buttons"%>
     <button class="edit_form_buttons" type="button" name="button"><%= link_to "Back", @user %></button>
    </div>

    <%end%>
  </div>
</div>
