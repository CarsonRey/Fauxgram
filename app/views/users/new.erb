<div class="centering_container">
  <div class="form_container">
<%= form_for @user do |f| %>

  <%= f.label :name, class:"message"  %>
  <%= f.text_field :name, class: "comment_input" %>
  <%= f.label :username, class:"message"  %>
  <%= f.text_field :username, class: "comment_input" %>
  <%= f.label :password, class:"message"  %>
  <%= f.password_field :password, class: "comment_input"  %>
  <%= f.label "Confirm Password", class:"message"  %>
  <%= f.password_field :password_confirmation, class: "comment_input" %>
  <%= f.submit%>
<%end%>

  </div>
</div>
