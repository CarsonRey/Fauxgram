<div class="centering_container">
  <% if @hashtag%>
    <div class="index_post_container">
      <%@pictures.each do |picture| %>

        <div class="picture_author">
          <%= image_tag picture.user.img_url, width: 50, height: 50, class: "index_user_pic"%> <%= link_to picture.user.username, picture.user, :class => "feed_username" %>
        </div>

        <div class="align_picture_and_comments">

          <div class="index_pictures">
            <a href= <%="/users/#{picture.user.id}/pictures/#{picture.id}"%> >
            <%= image_tag picture.img_url, class: "index_pictures" %></a>
          </div>

          <div class="index_picture_info">
            <%= link_to picture.user.username, picture.user, :class => "username" %>
            <div class="picture_description">
              <%= picture.description%>
            </div>
          </div>

          <div class="index_comments_container">
            <% picture.comments.take(5).each do |comment| %>
              <div class="comment">
                <%= link_to comment.user.username, comment.user %> <%= comment.content   %>
              </div>
            <% end %>
          </div>

        </div> <!-- align_picture_and_comments -->
      <% end %>
    </div> <!-- index_post_container -->

  <% else %>
    <div class="message">
      <p class="red">Sorry!</p> <p class="inner_message">There are no pictures with the hashtag you entered. Click <%= link_to "here", search_path, class: "link"%> to search again.</p>
    </div>
  <% end %>
</div> <!-- centering_container -->
